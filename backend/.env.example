# ============================================
# OTPAS-HU Backend Configuration
# Online Tutorial & Project Advising System
# ============================================

# Server Configuration
PORT=3000
NODE_ENV=production

# Database Configuration (Render PostgreSQL)
DB_HOST=your_render_postgres_host
DB_PORT=5432
DB_NAME=academic_compass
DB_USER=postgres
DB_PASSWORD=your_render_postgres_password

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_min_32_chars
JWT_EXPIRE=7d

# CORS Configuration (Update with your frontend URL)
CORS_ORIGIN=https://your-frontend-url.onrender.com,http://localhost:8080

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# File Upload Configuration
MAX_FILE_SIZE=52428800
UPLOAD_DIR=./uploads

# Recommendation Engine
RECOMMENDATION_REFRESH_INTERVAL=86400

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
